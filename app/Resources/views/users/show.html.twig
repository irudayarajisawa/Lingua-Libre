{% extends 'base.html.twig' %}

{% block body %}
	<h1>
	{% if auth and auth.getId() == user.getId() %}
		My account
	{% else %}
		Count of « {{ user.getUsername()|capitalize }} »
	{% endif %}
	</h1>

	{% if user.editableBy(auth) %}
		<h2>Settings</h2>
		<table class="nice">
			<tr><th>E-mail</th><td>{{ user.getEmail() }}</td></tr>
			<tr><th>Registration</th><td>{{ user.getCreated()|date("d/m/Y") }}</td></tr>
			<tr><th colspan="2" class="tools"><a href="{{ path("usersUpdate", {"id":user.getId()}) }}"><img src="{{ asset("img/edit_24.png") }}" title="Modifier"/></a></th></tr>
		</table>
		<p><a class="lienpart" href="{{ path("usersUpdatePassword", {"id":user.getId()}) }}">Update Password</a></p>

		{% if user.getSpeakers()|length > 0 %}
			<p><a class="lienpart" href="{{ path('usersSpeakers', {"id": user.getId()}) }}">See the speakers</a></p>
		{% else %}	
			<p><a class="lienpart" href="{{ path("usersAddSpeaker", {"id": user.getId() }) }}">Defining a speaker</a></p>
		{% endif %}
	{% endif %}
{% endblock %}

