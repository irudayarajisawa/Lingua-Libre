{% extends 'base.html.twig' %}

{% block body %}
	<h1>Remove langue</h1>
	
	<p>Are you sure you want to delete the language  « {{ language.getTitle()|capitalize }} » ?</p>

	{{ form_start(form) }}
	<table>
		<tr><td>{{ form_widget(form.save) }} <a href="{{ path("languagesShow", {"id": language.getId() }) }}">Cancel</a></td></tr>
	</table>
	{{ form_end(form) }}

{% endblock %}

